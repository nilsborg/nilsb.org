---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="sticky top-0 mb-[10vh] px-5 py-2">
  <nav class="flex items-center gap-4">
    <a
      class="grid aspect-square size-[3ch] place-content-center rounded-full transition-all duration-300 hover:scale-150 hover:rotate-[1turn] hover:bg-purple-600"
      href="/"
      title={SITE_TITLE}>⚡️</a
    >
    <div
      class="flex gap-2 rounded-2xl bg-white/25 px-4 py-2 shadow-2xl backdrop-blur-xl"
    >
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
  </nav>
</header>
